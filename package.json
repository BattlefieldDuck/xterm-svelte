{
	"name": "@battlefieldduck/xterm-svelte",
	"version": "2.1.1",
	"description": "A SvelteKit wrapper for Xterm.js, enabling terminal embedding in SvelteKit apps, managing Xterm addons, and providing seamless updates with the latest SvelteKit and Xterm.js versions.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BattlefieldDuck/xterm-svelte.git"
	},
	"homepage": "https://xterm-svelte.pages.dev",
	"bugs": {
		"url": "https://github.com/BattlefieldDuck/xterm-svelte/issues"
	},
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:e2e": "playwright test",
		"test": "npm run test:e2e"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.43.5"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/node": "^24",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.15",
		"svelte": "^5.43.5",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite": "^7.2.2",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"keywords": [
		"svelte",
		"xterm",
		"xterm-js",
		"sveltekit",
		"xterm-svelte"
	],
	"dependencies": {
		"@xterm/addon-attach": "^0.11.0",
		"@xterm/addon-canvas": "^0.7.0",
		"@xterm/addon-clipboard": "^0.1.0",
		"@xterm/addon-fit": "^0.10.0",
		"@xterm/addon-image": "^0.8.0",
		"@xterm/addon-search": "^0.15.0",
		"@xterm/addon-serialize": "^0.13.0",
		"@xterm/addon-unicode11": "^0.8.0",
		"@xterm/addon-web-links": "^0.11.0",
		"@xterm/addon-webgl": "^0.18.0",
		"@xterm/xterm": "^5.5.0"
	}
}
